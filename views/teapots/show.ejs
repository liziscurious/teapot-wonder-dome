<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <% include ../partials/user_welcome.ejs %>
    <div class="container-fluid text-center">
      <h1>This Teapot Right Here</h1>
      <div class="jumbotron text-center">
        <img src="<%= oneTeapot.url %>" />
        <p>Teapot: <%= oneTeapot.nameOfTeapot %> </p>
        <p>Material: <%= oneTeapot.material %> </p>
        <p><%= oneTeapot.writeUp %> </p>
        <p> Submitted by: <%= oneTeapot.submitted_by %> </p>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading"> Comments </div>
        <% for (let comment of comments )  { %>
          <div class="panel-body"> <%= comment.author %> : <%= comment.content %>
            <form action="/comments/<%=comment._id%>?_method=DELETE" method=post>
              <button class="btn btn-danger">Delete comment <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
            </form>
          </div>
        <% } %>

        <div class="panel-heading">Add a Comment</div>
        <br/>
        <form action="/comments" method="post">
          <label for="author">User </label>
          <input type="text" name="author"/>
          <label for="content">Comment </label>
          <input type="text" name="content"/>
          <input type="hidden" name="teapot" value="<%= oneTeapot._id %>"/>
          <input type="submit" name="submit" class="btn btn-info"/>
        </form>
        <br/>
        <div id="edit-delete">
          <a class="btn btn-success" href="/teapots/<%=oneTeapot._id%>/edit">Edit this teapot <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
          <form action="/teapots/<%=oneTeapot.id%>?_method=DELETE" method=POST>
            <button class="btn btn-danger">Delete this teapot <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
