<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div class="container-fluid text-center negative-space">
      <% include ../partials/nav.ejs %>
      <h1>Edit This Teapot</h1>

      <form class="edit edit-form" action="/teapots/<%=editThisTeapot.id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="url">Image</label>
          <input type="text" name="url" value="<%=editThisTeapot.url%>">
        </div>

        <div class="form-group">
          <label for="nameOfTeapot">Name of teapot: </label>
          <input type="text" name="nameOfTeapot" value="<%=editThisTeapot.nameOfTeapot%>"/>
        </div>

        <div class="form-group">
          <label for="material">Material: </label>
          <input type="text" name="material" value="<%=editThisTeapot.material%>"/>
        </div>

        <div class="form-group">
          <label for="writeUp">Write up: </label>
          <input type="text" name="writeUp" value="<%=editThisTeapot.writeUp%>"/>
        </div>

        <button class="submit">Submit changes</button>
      </form>
      <br/>
      <% include ../partials/footer.ejs %>
    </div>
  </body>
</html>
